<!doctype html>
<html lang="en">

<body>
    
    <p id="notice"><%= notice %></p>
    
<h1>Instrumentos</h1>

    <%= link_to "alunos", alunos_path %>
    <%= link_to "instrumentos", instrumentos_path %>
    <%= link_to "professors", professors_path %>

<table class="table table-hover table-dark"
  <thead>
    <tr>
      <th scope="row"></th>
      <th scope="col">Nome</th>
      <th scope="col">Familia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instrumentos.each do |instrumento| %>
      <tr>
        <th scope="row"></th>
        <td><%= instrumento.nome %></td>
        <td><%= instrumento.familia %></td>
        <td><%= link_to 'Show', instrumento %></td>
        <td><%= link_to 'Edit', edit_instrumento_path(instrumento) %></td>
        <td><%= link_to 'Destroy', instrumento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </body>
<br>

<p align="center"><%= link_to 'New Instrumento', new_instrumento_path %></p>



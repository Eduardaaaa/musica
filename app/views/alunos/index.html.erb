<!doctype html>
<html lang="en">
<body>
  
    <p id="notice"><%= notice %></p>
    
    
    
<h1>Alunos</h1>

  <table align="center">
    <%= link_to "alunos", alunos_path %>
    <%= link_to "instrumentos", instrumentos_path %>
    <%= link_to "professors", professors_path %>
  </table>
  
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="row"></th>
      <th scope="col">id</th>
      <th scope="col">Nome</th>
      <th scope="col">Idade</th>
      <th scope="col">Instrumento</th>
      <th scope="col">Turno</th>
      <th scope="col">Materia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <th scope="row"></th>
        <td><%= aluno.id %></td>
        <td><%= aluno.nome %></td>
        <td><%= aluno.idade %></td>
        <td><%= aluno.instrumento.nome %></td>
        <td><%= aluno.turno %></td>
        <td><%= aluno.materia %></td>
        <td><%= link_to 'Show', aluno %></td>
        <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Destroy', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </body>
<br>

<p align="center"><%= link_to 'New Aluno', new_aluno_path %></p>

